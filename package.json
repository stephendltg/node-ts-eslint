{
  "name": "node-typescript-template-eslint",
  "version": "1.2.1",
  "description": "template typescript nodejs with es-lint",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "engines": {
    "node": ">=14.15.3",
    "npm": ">=6.14.11"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{repository}.git"
  },
  "bugs": {
    "url": "https://github.com/{repository}/issues"
  },
  "contributors": [
    "stephen.deletang@shopopop.com"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "jest --reporters=default",
    "build": "tsc --build",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "release": "standard-version",
    "prerelease": "standard-version -- --prerelease",
    "fix": "standard-version -- --release-as minor",
    "doc": "rimraf docs && npx typedoc src/index.ts"
  },
  "keywords": [
    "eslint",
    "nodejs",
    "typescript",
    "es6",
    "browser"
  ],
  "author": "tech-shopopop <tech@shopopop.com>",
  "license": "ISC",
  "simple-git-hooks": {
    "pre-commit": "npx commitlint --edit $1 & npm run lint",
    "pre-push": "npm run typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "17.0.0-0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-jsonc": "^2.0.0",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security-node": "^1.1.1",
    "eslint-plugin-unicorn": "^40.1.0",
    "eslint-plugin-yml": "^0.12.0",
    "jest": "^27.4.5",
    "jsonc-eslint-parser": "^2.1.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.2",
    "typedoc": "^0.22.10",
    "yaml-eslint-parser": "^0.5.0"
  },
  "dependencies": {
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
